import java.util.Calendar;
import java.util.GregorianCalendar;

/**
 * Created by tzirschka17 on 11/12/15.
 */
public class GregorianCalender {

public static void main(String[] args) {
        GregorianCalendar cal = new GregorianCalendar();

System.out.println("Today's Date!");
        int dayOfMonth = cal.get(Calendar.DAY_OF_MONTH);
        int month = cal.get(Calendar.MONTH);
        int year = cal.get(Calendar.YEAR);
        int weekday = cal.get(Calendar.DAY_OF_WEEK);
        System.out.println(dayOfMonth);
        System.out.println(month);
        System.out.println(year);
        System.out.println(weekday);
System.out.println("100 days Later");
        cal.add(Calendar.DAY_OF_MONTH,100);
        int dayOfMonth100 = cal.get(Calendar.DAY_OF_MONTH);
        int month100 = cal.get(Calendar.MONTH);
        int year100 = cal.get(Calendar.YEAR);
        int weekday100 = cal.get(Calendar.DAY_OF_WEEK);
        System.out.println(dayOfMonth100);
        System.out.println(month100);
        System.out.println(year100);
        System.out.println(weekday100);

        GregorianCalendar myBirthday = new GregorianCalendar(1999, Calendar.APRIL, 13);
System.out.println("My Birthday!");
        int birthdayOfMonth = myBirthday.get(Calendar.DAY_OF_MONTH);
        int birthmonth = myBirthday.get(Calendar.MONTH);
        int birthyear = myBirthday.get(Calendar.YEAR);
        int birthweekday = myBirthday.get(Calendar.DAY_OF_WEEK);
        System.out.println(birthdayOfMonth);
        System.out.println(birthmonth);
        System.out.println(birthyear);
        System.out.println(birthweekday);
System.out.println("10,000 days after my Birthday");
        myBirthday.add(Calendar.DAY_OF_MONTH,10000);
        int birthdayOfMonth100 = myBirthday.get(Calendar.DAY_OF_MONTH);
        int birthmonth100 = myBirthday.get(Calendar.MONTH);
        int birthyear100 = myBirthday.get(Calendar.YEAR);
        int birthweekday100 = myBirthday.get(Calendar.DAY_OF_WEEK);
        System.out.println(birthdayOfMonth100);
        System.out.println(birthmonth100);
        System.out.println(birthyear100);
        System.out.println(birthweekday100);
}

}
